<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.preference.Preference
        android:key="pref_toggle"
        android:title="Toggle immersive mode" />
    <android.support.v7.preference.PreferenceCategory android:title="Appearance" />
    <android.support.v7.preference.CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_notification_enabled"
        android:summary="Recommended on low memory devices"
        android:title="Enable notification" />
    <android.support.v7.preference.CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_hide_status_bar"
        android:title="Hide status bar" />
    <android.support.v7.preference.CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_hide_navigation_bar"
        android:title="Hide navigation bar" />
    <android.support.v7.preference.PreferenceCategory android:title="Advanced" />
    <android.support.v7.preference.Preference
        android:key="pref_toggle"
        android:title="Exclude apps"
        android:summary="Disable immersive mode when specific apps are open"/>
    <android.support.v7.preference.CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_detect_keyboard"
        android:summary="Useful for some apps which have not been built to support immersive mode and keyboard used at once"
        android:title="Disable immersive mode when keyboard open" />
</android.support.v7.preference.PreferenceScreen>
